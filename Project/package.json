{
  "name": "anand-municipal-platform",
  "version": "2.0.0",
  "description": "Comprehensive Municipal Corporation Citizen Engagement Platform with real-time features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t anand-municipal .",
    "docker:run": "docker run -p 3000:3000 anand-municipal"
  },
  "keywords": [
    "municipal",
    "civic-engagement",
    "issue-reporting",
    "real-time",
    "express",
    "mongodb",
    "socket.io",
    "jwt",
    "cloudinary",
    "email",
    "geolocation",
    "notifications"
  ],
  "author": "Anand Municipal Corporation",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.1",
    "streamifier": "^0.1.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "node-cron": "^3.0.3",
    "crypto": "^1.0.1",
    "path": "^0.12.7",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "no-underscore-dangle": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anand-municipal/platform.git"
  },
  "bugs": {
    "url": "https://github.com/anand-municipal/platform/issues"
  },
  "homepage": "https://github.com/anand-municipal/platform#readme"
}
